<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="saveGameMenu" alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 5px;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baldursbones.bb.SaveMenuController">
   <Region minWidth="-Infinity" prefWidth="30.0" />
   <VBox id="SaveMenu" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
      <Region minHeight="30.0" />
      <HBox id="TitleBox" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Label id="SaveMenuTitle" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Saved Characters" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <font>
               <Font size="36.0" />
            </font>
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Label>
      </HBox>
      <Region minHeight="30.0" VBox.vgrow="ALWAYS" />
      <TableView id="SavedFilesTable" fx:id="saveFileTable" focusTraversable="false" minHeight="200.0" minWidth="600.0" prefHeight="200.0" prefWidth="600.0" VBox.vgrow="NEVER">
         <columns>
            <TableColumn id="SavedTableFileName" fx:id="nameColumn" editable="false" maxWidth="-Infinity" minWidth="200.0" prefWidth="-1.0" style="-fx-alignment: CENTER;" styleClass="SavedTableColumn" text="File Name" />
            <TableColumn id="SavedTableCharacterName" fx:id="characterColumn" editable="false" maxWidth="-Infinity" minWidth="200.0" prefWidth="-1.0" style="-fx-alignment: CENTER;" styleClass="SavedTableColumn" text="Character" />
            <TableColumn id="SavedTableSaveTime" fx:id="timeColumn" editable="false" maxWidth="-Infinity" minWidth="200.0" prefWidth="-1.0" style="-fx-alignment: CENTER;" styleClass="SavedTableColumn" text="Save Time" />
         </columns>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Region minHeight="30.0" VBox.vgrow="ALWAYS" />
      <HBox id="SaveMenuInputContainer" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Label id="SaveFileTitle" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Create New Save:" textAlignment="CENTER" textOverrun="CLIP">
            <font>
               <Font size="24.0" />
            </font>
            <HBox.margin>
               <Insets bottom="10.0" right="30.0" top="10.0" />
            </HBox.margin>
         </Label>
         <TextField id="SaveFileInputField" fx:id="saveNameField" maxWidth="150.0" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" right="70.0" top="10.0" />
            </HBox.margin>
            <font>
               <Font size="14.0" />
            </font>
         </TextField>
         <Button id="SaveFileButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#addNewSaveFile" styleClass="SaveMenuButton" text="Create New Save" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <HBox id="outputContainer" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
         <Label fx:id="saveOutput" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Save Output" textAlignment="CENTER" textOverrun="CLIP" visible="false">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </HBox>
      <HBox id="SaveMenuButtonsContainer" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="50.0" right="50.0" />
         </VBox.margin>
         <Button id="LoadSaveMenuButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#loadSaveFile" styleClass="SaveMenuButton" text="Load Save" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="CloseSaveMenuButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#closeSaveMenu" styleClass="SaveMenuButton" text="Close Menu" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="DeleteSaveMenuButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#deleteSaveFile" styleClass="SaveMenuButton" text="Delete Save" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <Region minHeight="-Infinity" prefHeight="30.0" />
   </VBox>
   <Region minWidth="-Infinity" prefWidth="30.0" />
</HBox>
