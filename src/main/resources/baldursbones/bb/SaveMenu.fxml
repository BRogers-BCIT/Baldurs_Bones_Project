<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="saveGameMenu" alignment="CENTER" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baldursbones.bb.SaveMenuController">
   <Region fx:id="SaveMenuLeft" prefWidth="50.0" />
   <VBox id="SaveMenu" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
      <Region fx:id="SaveMenuHeader" minHeight="30.0" />
      <HBox id="TitleBox" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Region fx:id="SaveTitleLeft" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </Region>
         <Label id="SaveMenuTitle" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Saved Characters" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <font>
               <Font size="24.0" />
            </font>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets bottom="10.0" top="10.0" />
            </padding>
         </Label>
         <Region fx:id="SaveTitleRight" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Region>
      </HBox>
      <Region fx:id="SaveTitleBottom" minHeight="30.0" VBox.vgrow="ALWAYS" />
      <TableView id="SavedFilesTable" fx:id="saves" focusTraversable="false" maxHeight="200.0" VBox.vgrow="NEVER">
         <columns>
            <TableColumn id="SavedTableFileName" fx:id="saveName" editable="false" maxWidth="-Infinity" minWidth="136.0" prefWidth="-1.0" style="-fx-alignment: CENTER;" styleClass="SavedTableColumn" text="File Name" />
            <TableColumn id="SavedTableCharacterName" fx:id="characterName" editable="false" maxWidth="-Infinity" minWidth="136.0" prefWidth="-1.0" style="-fx-alignment: CENTER;" styleClass="SavedTableColumn" text="Character" />
            <TableColumn id="SavedTableSaveTime" fx:id="saveTime" editable="false" maxWidth="-Infinity" minWidth="135.0" prefWidth="-1.0" style="-fx-alignment: CENTER;" styleClass="SavedTableColumn" text="Save Time" />
         </columns>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Region minHeight="30.0" VBox.vgrow="ALWAYS" />
      <HBox id="SaveMenuInputContainer" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Label id="SaveFileTitle" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Create New Save:" textAlignment="CENTER" textOverrun="CLIP">
            <font>
               <Font size="24.0" />
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="70.0" right="50.0" top="10.0" />
            </HBox.margin>
         </Label>
         <Label id="FileSaveLabel" ellipsisString="" graphicTextGap="0.0" text="File Name :" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <font>
               <Font size="18.0" />
            </font>
            <HBox.margin>
               <Insets bottom="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Label>
         <TextField id="SaveFileInputField" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" right="50.0" top="10.0" />
            </HBox.margin>
         </TextField>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="SaveFileButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" styleClass="SaveMenuButton" text="Create New Save" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" right="220.0" top="10.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <Region minHeight="30.0" />
      <HBox id="SaveMenuButtonsContainer" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Button id="LoadSaveMenuButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" styleClass="SaveMenuButton" text="Load Save" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" left="100.0" right="50.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="CloseSaveMenuButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#closeSaveMenu" styleClass="SaveMenuButton" text="Close Menu" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="DeleteSaveMenuButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" styleClass="SaveMenuButton" text="Delete Save" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" left="60.0" right="70.0" top="10.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <Region fx:id="SaveMenuFooter" minHeight="30.0" />
   </VBox>
   <Region fx:id="SaveMenuRight" prefWidth="50.0" />
</HBox>
