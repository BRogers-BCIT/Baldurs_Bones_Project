<HBox fx:id="gameInfoMenu" alignment="CENTER" maxWidth="550.0" style="-fx-border-color: black; -fx-border-width: 5px;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baldursbones.bb.GameInfoController">
   <Region maxWidth="-Infinity" minWidth="-Infinity" prefWidth="30.0" HBox.hgrow="NEVER" />
   <VBox id="GameInfoContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
      <Region minHeight="-Infinity" prefHeight="30.0" VBox.vgrow="NEVER" />
      <HBox id="TitleBox" alignment="CENTER" VBox.vgrow="NEVER">
         <Label id="GameInfoTitle" fx:id="gameInfoTitle" alignment="CENTER" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Game Info: Page X" textAlignment="CENTER" textOverrun="CLIP">
            <font>
               <Font size="24.0" />
            </font>
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Label>
      </HBox>
      <Region minHeight="30.0" />
      <Label id="InfoTitleOne" fx:id="infoTitleOne" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Info Element One" textAlignment="CENTER" textOverrun="CLIP" VBox.vgrow="NEVER">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin>
      </Label>
      <TextArea id="InfoBoxOne" fx:id="infoAreaOne" editable="false" prefColumnCount="0" prefRowCount="0" wrapText="true" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Region minHeight="30.0" VBox.vgrow="ALWAYS" />
      <Label id="InfoElementTwo" fx:id="infoTitleTwo" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Info Element Two" textAlignment="CENTER" textOverrun="CLIP" VBox.vgrow="NEVER">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin>
      </Label>
      <TextArea id="InfoBoxTwo" fx:id="infoAreaTwo" editable="false" prefColumnCount="0" prefRowCount="0" wrapText="true" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Region minHeight="30.0" VBox.vgrow="ALWAYS" />
      <Label id="InfoElementThree" fx:id="infoTitleThree" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Info Element Three" textAlignment="CENTER" textOverrun="CLIP" VBox.vgrow="NEVER">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin>
      </Label>
      <TextArea id="InfoBoxThree" fx:id="infoAreaThree" editable="false" prefColumnCount="0" prefRowCount="0" wrapText="true" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Region minHeight="30.0" VBox.vgrow="ALWAYS" />
      <HBox id="InfoButtonsContainer" alignment="CENTER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Button id="PrevInfoPageButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#prevPage" text="Previous Page" textAlignment="CENTER" textOverrun="CLIP">
            <HBox.margin>
               <Insets bottom="10.0" left="50.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Region minWidth="50.0" />
         <Button id="CloseInfoButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#closeGameInfoMenu" text="Close Game Info" textAlignment="CENTER" textOverrun="CLIP">
            <HBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Region minWidth="50.0" />
         <Button id="NextInfoPageButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#nextPage" text="Next Page" textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets bottom="10.0" right="50.0" top="10.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <Region minHeight="-Infinity" prefHeight="30.0" />
   </VBox>
   <Region maxWidth="-Infinity" minWidth="-Infinity" prefWidth="30.0" HBox.hgrow="NEVER" />
</HBox>
