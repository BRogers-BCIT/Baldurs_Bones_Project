<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox style="-fx-border-color: black; -fx-border-width: 5px;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baldursbones.bb.QuitPopupController">
   <Region minWidth="-Infinity" prefWidth="30.0" />
   <VBox id="QuitMenuContainer" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
      <Region minHeight="-Infinity" prefHeight="30.0" />
      <HBox id="QuitTitleContainer" alignment="CENTER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Label id="QuitTitle" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Are you sure you want to quit?" textAlignment="CENTER" textOverrun="CLIP">
            <font>
               <Font size="24.0" />
            </font>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </Label>
      </HBox>
      <HBox id="QuitButtonsContainer" alignment="CENTER" VBox.vgrow="ALWAYS">
         <Button id="CancelQuit" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" minWidth="100.0" mnemonicParsing="false" onAction="#closeQuit" text="Cancel Quit" textAlignment="CENTER" textOverrun="CLIP">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="MenuQuit" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" minWidth="100.0" mnemonicParsing="false" onAction="#returnToMainMenu" text="Return to Menu" textAlignment="CENTER" textOverrun="CLIP">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Region HBox.hgrow="ALWAYS" />
         <Button id="DesktopQuit" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" minWidth="100.0" mnemonicParsing="false" onAction="#quitGame" text="Confirm Quit" textAlignment="CENTER" textOverrun="CLIP">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
      </HBox>
      <Region minHeight="-Infinity" prefHeight="30.0" />
   </VBox>
   <Region minWidth="-Infinity" prefWidth="30.0" />
</HBox>
