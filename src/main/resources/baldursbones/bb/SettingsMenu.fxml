            <Insets />
         </VBox.margin>
      </CheckBox>
      <Button id="SaveButton" fx:id="openSaveMenuButton" contentDisplay="TEXT_ONLY" graphicTextGap="0.0" mnemonicParsing="false" onAction="#openSaveMenu" text="Save / Load" textAlignment="CENTER" textOverrun="CLIP">
         <VBox.margin>
            <Insets bottom="30.0" left="20.0" right="20.0" />
         </VBox.margin>
      </Button>
      <CheckBox id="EffectsEnable" fx:id="enableSFXState" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#updateSoundSettings" text="Enable SFX" textAlignment="CENTER" textOverrun="CLIP" visible="false">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </CheckBox>
      <Button id="RulesButton" fx:id="openGameInfoButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#openGameInfoMenu" text="Game Info" textAlignment="CENTER" textOverrun="CLIP">
         <VBox.margin>
            <Insets bottom="22.0" left="20.0" right="20.0" />
         </VBox.margin>
      </Button>
      <Button id="ReturnFromSound" fx:id="closeSoundSettingsButton" contentDisplay="TEXT_ONLY" graphicTextGap="0.0" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" text="Close Sound Settings" textAlignment="CENTER" textOverrun="CLIP" visible="false" />
      <Button id="SoundButton" fx:id="openSoundSettingsButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#toggleSoundSettings" text="Sound Settings" textAlignment="CENTER" textOverrun="CLIP">
         <VBox.margin>
            <Insets bottom="30.0" left="20.0" right="20.0" />
         </VBox.margin>
      </Button>
      <Button id="QuitButton" fx:id="quitGameButton" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" mnemonicParsing="false" onAction="#openQuitGamePopUp" text="Quit" textAlignment="CENTER" textOverrun="CLIP">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="17.0" />
         </VBox.margin>
      </Button>
      <Region minHeight="-Infinity" prefHeight="30.0" />
   </VBox>
</HBox>
