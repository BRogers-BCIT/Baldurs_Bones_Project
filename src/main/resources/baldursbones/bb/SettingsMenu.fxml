         <Label id="SettingsTitle" contentDisplay="TEXT_ONLY" ellipsisString="" graphicTextGap="0.0" text="Settings" textAlignment="CENTER" textOverrun="CLIP">
            <font>
               <Font size="24.0" />
            </font>
            <padding>
               <Insets left="20.0" right="20.0" />
            </padding>
         </Label>
      </HBox>
      <Region prefHeight="30.0" VBox.vgrow="ALWAYS" />
      <Button id="SaveButton" fx:id="closeMenuButton" contentDisplay="TEXT_ONLY" graphicTextGap="0.0" mnemonicParsing="false" onAction="#closeSettings" text="Close" textAlignment="CENTER" textOverrun="CLIP">
         <VBox.margin>
            <Insets bottom="30.0" left="20.0" right="20.0" />
         </VBox.margin>
      </Button>
      <CheckBox id="MusicEnable" fx:id="enableMusicState" contentDisplay="TEXT_ONLY" graphicTextGap="0.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#updateSoundSettings" text="Enable Music" textAlignment="CENTER" textOverrun="CLIP" visible="false">
