<HBox fx:id="settingsMenu" alignment="CENTER" fillHeight="false" maxWidth="250.0" style="-fx-border-color: black; -fx-border-width: 5px;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baldursbones.bb.SettingsMenuController">
